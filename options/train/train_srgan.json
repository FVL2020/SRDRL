// Not total the same as SRGAN in <Photo-Realistic Single Image Super-Resolution Using a Generative Adversarial Network>
{
  "name": "SRGAN_psnr_DIV_x4_md_3e5" //  please remove "debug_" during training
  , "use_tb_logger": true
  , "model":"srgan"
  , "scale": 4
  , "gpu_ids": [0]

  , "datasets": {
    "train": {
      "name": "DIV2K800"
      , "mode": "MLRHR"
      , "downsample_num": 3
      , "dataroot_HR": "../datasets/DIV2K800/DIV2K800_HR"
      , "dataroot_LR": "../datasets/DIV2K800/DIV2K800_md"
      , "subset_file": null
      , "use_shuffle": true
      , "n_workers": 16
      , "batch_size": 16
      , "HR_size": 128 //HR size * HR size
      , "use_flip": true
      , "use_rot": true
    }
    , "val": {
      "name": "DIV2K100"
      , "mode": "MLRHR"
      , "downsample_num": 3
      , "dataroot_HR": "../datasets/DIV2K100/DIV2K100_crop_HR"
      , "dataroot_LR": "../datasets/DIV2K100/DIV2K100_crop_md"
    }
  }

  , "path": {
    "root": "./"
    // , "resume_state": "./experiments/SRGAN_psnr_DIV_x4_bbn_3e5/training_state/20000.state"
  }

  , "network_G": {
    "which_model_G": "sr_resnet"
    , "norm_type": null
    , "mode": "CNA"
    , "nf": 64
    , "nb": 16
    , "in_nc": 3
    , "out_nc": 3
  }
  , "network_D": {
    "which_model_D": "discriminator_vgg"
    , "input_size": 128
    , "norm_type": "batch"
    , "act_type": "leakyrelu"
    , "mode": "CNA"
    , "nf": 64
    , "in_nc": 3
  }

  , "train": {
    "lr_G": 1e-4
    , "weight_decay_G": 0
    , "beta1_G": 0.9
    , "lr_D": 1e-4
    , "weight_decay_D": 0
    , "beta1_D": 0.9
    , "lr_scheme": "MultiStepLR"
    , "lr_steps": [60000, 120000, 180000, 240000]
    , "lr_gamma": 0.5

    , "pixel_criterion": "l1"
    , "pixel_weight": 1 //1e-2
    , "feature_criterion": "l1"
    , "feature_weight": 0 //1
    , "gan_type": "vanilla"
    , "gan_weight": 0 //5e-3

    //for wgan-gp
    // , "D_update_ratio": 1
    // , "D_init_iters": 0
    // , "gp_weigth": 10

    , "manual_seed": 0
    , "niter": 3e5
    , "val_freq": 2e4
  }

  , "logger": {
    "print_freq": 200
    , "save_checkpoint_freq": 2e4
  }
}
